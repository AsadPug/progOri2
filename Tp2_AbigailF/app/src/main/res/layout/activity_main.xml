<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="413dp"
        android:layout_height="54dp"
        android:background="#979797"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/toolBox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pencil"
                tools:srcCompat="@drawable/pencil" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/eraser"
                tools:srcCompat="@drawable/eraser" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/colorpicker"
                tools:srcCompat="@drawable/colorpicker" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="49dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/bucket"
                tools:srcCompat="@drawable/bucket" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/strokesize"
                tools:srcCompat="@drawable/strokesize" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/redo"
                tools:srcCompat="@drawable/redo" />

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/undo"
                tools:srcCompat="@drawable/undo" />

            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/round"
                tools:srcCompat="@drawable/round" />

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/square"
                tools:srcCompat="@drawable/square" />

            <ImageView
                android:id="@+id/imageView26"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/triangle"
                tools:srcCompat="@drawable/triangle" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/colorPalette"
        android:layout_width="60dp"
        android:layout_height="610dp"
        android:background="#979797"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/black"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:translationX="10dp" />

        <Button
            android:id="@+id/white"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:translationX="10dp" />

        <Button
            android:id="@+id/red"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:translationX="10dp" />

        <Button
            android:id="@+id/orange"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:translationX="10dp" />

        <Button
            android:id="@+id/yellow"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:translationX="10dp" />

        <Button
            android:id="@+id/green"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:translationX="10dp" />

        <Button
            android:id="@+id/blue"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:translationX="10dp" />

        <Button
            android:id="@+id/purple"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:translationX="10dp" />

        <ImageView
            android:id="@+id/currentTool"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#00000000"
            android:translationX="2dp"
            android:translationY="2dp"
            app:srcCompat="@drawable/pencil" />

        <ImageView
            android:id="@+id/currentColor"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#000000"
            android:translationX="8dp"
            android:translationY="8dp"
            app:srcCompat="?attr/actionBarItemBackground" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>